
.home_content_wrapper {
  width: 100%;
  ms('padding-top', 75px 95px 115px 135px 165px 175px);
  ms('padding-bottom', 75px 95px 115px 135px 165px 182px);
  position: static;

  // position: relative;
  .page_img {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
    z-index: 0;

    img {
      width: 100%;
      height: 100%;
    }
  }

  .home_content {
    width: 100%;
    position: relative;
  }

  .home_banner {
    width: 100%;
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    align-items: center;
    ms('padding-right', 0 0 10px 20px 30px 40px);
    ms('flex-direction', column-reverse column-reverse row row row row);
    ms('margin-bottom', 75px 95px 115px 135px 165px 175px);

    .banner_text {
      ms('width', 100% 100% 48% 48% 48% 48%);

      h2 {
        width: 100%;
        position: relative;
        ms('font-size', 20px 26px 24px 34px 39px 41px);
        font-family: 'Poppins-Bold';
        font-weight: bold;
        color: #1A1210;
        ms('margin-bottom', 30px 30px 40px 50px 50px 50px);
        line-height: 1.5;
        ms('margin-top', 20px 30px 0 0 0 0);
      }

      .banner_btn {
        display: flex;

        .base_components_button_layout {
          margin-right: 10px;
          ms('max-width', auto auto 160px 160px 160px 160px);

          &:last-child {
            margin-right: 0;
          }
        }
      }
    }

    .banner_img {
      ms('width', 100% 100% 48% 48% 48% 48%);

      img {
        width: 100%;
        display: block;
      }
    }
  }

  .home_swiper {
    width: 100%;
    background: #fff;
    overflow: hidden;
    position: relative;
    max-height: 52px;

    .h_swiper_box {
      width: 100%;
      position: relative;
      ms('padding-left', 24px 28px 32px 36px 38px 38px);

      .msg {
        position: absolute;
        left: 0;
        top: 50%;
        transform: translate3d(0, -50%, 0);
        ms('width', 16px 18px 20px 22px 24px 24px);
        ms('height', 16px 18px 20px 22px 24px 24px);

        img {
          display: block;
          width: 100%;
        }
      }
    }

    .slide_box {
      width: 100%;
      ms('padding-top', 10px 11px 12px 13px 14px 15px);
      ms('padding-bottom', 10px 11px 12px 13px 14px 15px);
    }
  }

  .home_intro {
    width: 100%;
    position: relative;
    ms('padding-top', 32px 37px 42px 47px 53px 57px);

    .buy_box {
      width: 100%;
      position: relative;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      ms('padding-bottom', 44px 55px 66px 77px 88px 88px);

      .buy_title {
        ms('width', 100% 100% 40% 40% 40% 40%);
      }

      .buy_img {
        ms('width', 100% 100% 50% 50% 50% 50%);
        ms('margin-top', 20px 30px 0 0 0 0);

        .base_components_button_layout {
          max-width: 320px;
          margin: 0 auto;
        }

        img {
          width: 100%;
          display: block;
        }
      }
    }

    .intro_box {
      width: 100%;
      position: relative;
      display: flex;
      justify-content: space-between;
      align-items: center;
      flex-wrap: wrap;
      flex-direction: column-reverse;
      ms('flex-direction', column-reverse column-reverse row row row row);
      ms('padding-bottom', 44px 55px 66px 77px 79px 79px);

      .intro_text {
        ms('width', 100% 100% 45% 45% 45% 45%);
      }

      .intro_img {
        ms('width', 100% 100% 50% 50% 50% 50%);
        ms('margin-top', 20px 30px 0 0 0 0);

        img {
          width: 100%;
          max-width: 279px;
          display: block;
          margin: 0 auto;
        }
      }
    }

    .relate_box {
      width: 100%;
      position: relative;

      .relate_list_wrap {
        width: 100%;
        position: relative;
        ms('margin-top', 10px 12px 14px 16px 18px 20px);
        display: flex;
        justify-content: space-between;
        flex-wrap: wrap;

        .relate_list {
          width: 25%;
          display: flex;
          justify-content: center;
          flex-wrap: wrap;
          ms('padding-top', 10px 15px 20px 25px 25px 25px);
          ms('padding-bottom', 10px 15px 20px 25px 25px 25px);

          .img_box {
            ms('width', 50px 55px 60px 65px 70px 70px);
            ms('height', 50px 55px 60px 65px 70px 70px);

            img {
              width: 100%;
              display: block;
            }
          }

          span {
            width: 100%;
            display: block;
            text-align: center;
            ms('font-size', 12px 14px 16px 18px 20px 20px);
            font-family: Poppins-SemiBold, Poppins;
            font-weight: 600;
            color: #1A1210;
            ms('margin-top', 5px 7px 8px 9px 10px 10px);
          }
        }
      }
    }
  }
}