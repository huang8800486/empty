
.earning_title_nav {
  width: 100%;
  position: relative;
  display: flex;
  justify-content: space-between;
  align-items: center;
  ms('padding-top', 25px 45px 65px 85px 105px 105px);

  .title_nav {
    ms('font-size', 18px 24px 30px 36px 40px 40px);
    font-family: 'Source Han Sans CN Bold';
    font-weight: bold;
    color: #1A1210;
  }

  .earning_nav_wrap {
    display: flex;
    align-items: center;

    .earning_nav {
      ms('padding-top', 6px 7px 8px 9px 10px 11px 12px);
      ms('padding-bottom', 6px 7px 8px 9px 10px 11px 12px);
      ms('padding-left', 6px 10px 16px 18px 20px 22px);
      ms('padding-right', 6px 10px 16px 18px 20px 22px);
      ms('font-size', 12px 13px 14px 15px 16px 16px);
       font-family: 'Source Han Sans CN-Regular';
      font-weight: 400;
      color: #1A1210;
      border-radius: 6px;
      border: 1px solid #000000;
      ms('margin-left', 4px 5px 6px 7px 8px 8px);
      display: flex;
      align-items: center;
      justify-content: center;
      transition();

      &:hover, &.on {
        background: #000;
        color: #fff;
      }

      img {
        ms('width', 5px 5px 5px 5px 6px 6px);
        margin-right: 4px;
      }
    }
  }
}

.earning_content {
  width: 100%;
  position: relative;
  ms('padding-top', 22px 32px 42px 52px 62px 72px);
  ms('padding-bottom', 25px 45px 65px 85px 105px 105px);

  .earning_home {
    width: 100%;
    position: relative;

    .coin_list_nav {
      width: 100%;
      position: relative;
      display: flex;
      align-items: center;

      .coin_nav {
        ms('font-size', 18px 24px 30px 36px 40px 40px);
        font-family: 'Source Han Sans CN Bold';
        font-weight: bold;
        color: #1A1210;
        ms('padding-top', 6px 7px 8px 9px 10px 12px);
        ms('padding-bottom', 6px 7px 8px 9px 10px 12px);
        ms('margin-right', 20px 30px 40px 60px 70px 80px);
        position: relative;

        &:before {
          content: '';
          position: absolute;
          width: 100%;
          ms('height', 2px 2px 3px 3px 4px 4px);
          background: #000;
          opacity: 0;
          transition();
          bottom: 0;
          width: 100%;
        }

        &:hover, &.on {
          &:before {
            opacity: 1;
          }
        }
      }
    }

    .coin_list_content {
      width: 100%;
      position: relative;
      ms('padding-top', 18px 28px 38px 48px 48px 48px);

      .coin_list_con {
        width: 100%;
        position: relative;
        min-height: 50vh;

        .coin_nodata {
          width: 100%;
          min-height: 50vh;
          display: flex;
          align-items: center;
          justify-content: center;
          ms('font-size', 12px 14px 16px 20px 22px 24px);
        }

        .coin_list_si {
          width: 100%;
          position: relative;
        }

        .coin_item_wrap {
          width: 100%;
          position: relative;
          background: #FFFFFF;
          box-shadow: 0px 3px 27px 1px rgba(0, 0, 0, 0.07);
          border-radius: 10px 10px 10px 10px;
          ms('padding-top', 12px 16px 20px 24px 28px 32px);
          ms('padding-bottom', 12px 16px 20px 24px 28px 32px);
          ms('padding-left', 10px 20px 30px 40px 50px 55px);
          ms('padding-right', 10px 20px 30px 40px 50px 50px);
          ms('margin-bottom', 22px 26px 30px 34px 38px 42px);
          flex-wrap: wrap;

          .coin_first {
            ms('width', 25% 25% 25% 25% 30% 30%);
            display: flex;
            align-items: center;
          }

          .coin_second {
            ms('width', 50% 50% 50% 50% 40% 40%);
          }

          .coin_three {
            ms('width', 25% 25% 25% 25% 30% 30%);
          }

          .coin_tit_wrap {
            width: 100%;
            position: relative;
            ms('padding-bottom', 8px 12px 14px 16px 18px 20px);
            border-bottom: 0 solid #000000;
            ms('border-bottom-width', 1px 1px 1px 2px 2px 2px);
            cursor: pointer;

            .coin_tit {
              width: 100%;
              position: relative;
              display: flex;
              align-items: center;

              .down {
                position: absolute;
                right: 0;
                top: 50%;
                transform: translate3d(0, -50%, 0);
                ms('width', 12px 14px 16px 18px 20px 22px);
                transition();

                img {
                  width: 100%;
                  display: block;
                }

                &.on {
                  transform: translate3d(0, -50%, 0) rotate(-180deg);
                }
              }

              .head_img {
                ms('width', 40px 50px 60px 70px 80px 83px);
                ms('height', 40px 50px 60px 70px 80px 83px);
                border-radius: 50%;
                overflow: hidden;
                background: #FFB8B8;
                opacity: 0;

                img {
                  width: 100%;
                  display: block;
                }
              }

              .com_tit {
                ms('font-size', 12px 14px 16px 20px 22px 24px);
                font-weight: 400;
                color: #1A1210;

                p {
                   font-family: 'Source Han Sans CN-Regular';
                }

                span {
                  font-family: Source Han Sans CN-Bold, Source Han Sans CN;
                  font-weight: bold;
                  width: 100%;
                  display: block;
                  ms('margin-top', 4px 5px 6px 7px 8px 9px 10px);
                }
              }

              .coin_rate {
                width: 100%;
                position: relative;
                text-align: center;
              }

              .coin_tex {
                width: 100%;
                position: relative;
                text-align: right;
                text-transform: uppercase;
              }
            }
          }

          .item_siginle_wrap {
            width: 100%;
            position: relative;
            max-height: 0;
            overflow: hidden;
            transition: all 0.3s ease;

            &.on {
              max-height: 210px; /* 大概的值，需要超过元素高度 */
            }

            .item_siginle {
              width: 100%;
              position: relative;
              ms('padding-top', 10px 12px 14px 16px 18px 20px);
              ms('padding-bottom', 10px 12px 14px 16px 21px 25px);
              display: flex;
              flex-wrap: wrap;

              .asset {
                width: 100%;
                position: relative;

                h3 {
                  ms('font-size', 14px 16px 18px 20px 22px 24px);
                  font-family: Source Han Sans CN-Bold, Source Han Sans CN;
                  font-weight: bold;
                  color: #1A1210;
                  ms('margin-bottom', 10px 12px 16px 18px 20px 24px);
                }

                p {
                  ms('font-size', 12px 13px 14px 15px 16px 16px);
                   font-family: 'Source Han Sans CN-Regular';
                  font-weight: 400;
                  line-height: 1.5;
                }
              }

              .coin_input_content {
                width: 100%;
                position: relative;
                text-align: right;

                .input_item {
                  width: 100%;
                  display: flex;
                  align-items: center;
                  ms('margin-bottom', 6px 8px 10px 12px 14px 14px);

                  .base_components_input_layout {
                    width: 50%;

                    .input_wrap {
                      ms('height', 30px 32px 34px 36px 38px 40px);
                      border: 1px solid #000000;
                      border-radius: 20px;
                    }

                    &.disabled {
                      .input_wrap {
                        background: #797B7C;
                        border-color: #797B7C;

                        input {
                          color: #494949;

                          &::-webkit-input-placeholder {
                            color: #494949;
                          }

                          &::-moz-placeholder {
                            color: #494949;
                          }
                        }
                      }
                    }
                  }

                  .max {
                    width: 20%;
                    text-align: center;
                    ms('font-size', 12px 12px 13px 13px 14px 14px);
                     font-family: 'Source Han Sans CN-Regular';
                    font-weight: 400;
                    color: #494949;
                  }

                  .base_components_button_layout {
                    width: 30%;
                    ms('min-height', 30px 32px 34px 36px 38px 40px);
                    border-radius: 20px;

                    a {
                      ms('font-size', 12px 12px 13px 14px 15px 16px);
                       font-family: 'Source Han Sans CN-Regular';
                      font-weight: 400;
                    }
                  }
                }
              }

              .item_text {
                width: 100%;
                ms('text-align', left left right right right right);
                ms('display', flex flex block block block block);
                ms('justify-content', space-between space-between right right right right);
                ms('margin-top', 10px 10px 0 0 0 0);

                p {
                  ms('font-size', 14px 16px 18px 20px 22px 24px);
                   font-family: 'Source Han Sans CN-Regular';
                  ms('font-weight', bold bold 400 400 400 400);
                  color: #1A1210;
                }

                span {
                  ms('font-size', 12px 13px 14px 15px 16px 16px);
                  display: block;
                  ms('margin-top', 4px 5px 6px 8px 10px 12px);
                  text-transform: uppercase;
                }
              }

              .coin_second {
                ms('width', 75% 75% 50% 50% 40% 40%);
              }

              .coin_three {
                ms('width', 100% 100% 25% 25% 30% 30%);
              }
            }
          }
        }
      }
    }
  }

  .earning_revenue_record {
    width: 100%;
    position: relative;
    background: #FFFFFF;
    box-shadow: 0px 3px 27px 1px rgba(0, 0, 0, 0.07);
    border-radius: 10px;
    ms('padding-top', 8px 10px 12px 14px 16px 16px);
    ms('padding-bottom', 14px 18px 22px 26px 28px 34px);
    ms('padding-left', 15px 25px 35px 45px 55px 55px);
    ms('padding-right', 15px 25px 35px 45px 55px 55px);

    .base_components_list_layout .base_components_list .list_item_noData {
      height: 400px;
    }
  }
}