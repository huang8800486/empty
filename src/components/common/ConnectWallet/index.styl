.wallet_button {
  display: flex;
  align-items: center;
  ms('margin-right', 8px 14px 16px 20px 24px 24px);
  white-space: nowrap;

  .base_components_button_layout {
    // border: 0.01rem solid $base-active-color;
    border-radius: 6px;
    padding-top: 0;
    padding-bottom: 0;
    text-transform: capitalize;
    box-shadow: none;
    font-weight: 400;
    background: #000000;
    font-weight: bold;
    ms('font-size', 12px 12px 13px 13px 14px 14px);
    ms('min-height', 32px 33px 34px 35px 36px 37px);
    margin-left: 16px;

    a {
      color: #FFFFFF;
      line-height: 1;
      display: flex;
      align-items: center;
    }

    img {
      width: 20px;
      margin-right: 7px;
    }
  }
}

.wallet_box_wrap {
  width: 100%;
  position: relative;

  .change_box {
    display: flex;
    justify-content: space-between;
    align-items: center;

    span {
      color: rgb(29, 200, 114);
    }
  }

  .wallet_address {
    width: 100%;
    position: relative;
    padding: 16px 0 8px;
    word-break: break-all;
  }

  .copy_check_wrap {
    width: 100%;
    position: relative;
    display: flex;
    font-size: 14px;
    margin-bottom: 32px;

    .svg_s {
      margin-left: 4px;
      width: 20px;
      height: 20px;
      color: #4186ff;
    }

    .view_bsc_scan {
      margin-left: 26px;
      margin-right: 16px;
    }

    a {
      color: #4186ff;
      display: flex;
      transition();

      &:hover {
        opacity: 0.8;
      }
    }
  }
}