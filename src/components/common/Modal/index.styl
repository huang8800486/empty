.global_overlay {
  position: fixed;
  top: 0;
  left: 0;
  z-index: 10000;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
}

.global_components_wrap {
  position: fixed;
  top: 0;
  right: 0;
  width: 100%;
  height: 100%;
  z-index: 10001;

  .global_components_modal {
    width: 100%;
    position: absolute;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    margin: auto;

    .close_icon {
      padding: 12px;
      position: absolute;
      width: 48px;
      height: 48px;
      ms('top', 4px 10px 10px 10px 18px 18px);
      ms('right', 10px 11px 12px 13px 14px 14px);
      z-index: 1;
      cs('color', 'base-font-color');
      cursor: pointer;

      img {
        width: 34px;
        display: block;
      }
    }
  }
}

.global_components_custom_modal {
  display: flex;
  align-items: center;
  justify-content: center;

  .common_modal_wrap {
    width: 100%;
    position: relative;
    ms('min-width', 300px 300px 300px 360px 416px 416px);
    max-width: 416px;
    width: auto;
    padding: 0 10px;

    .common_modal {
      width: 100%;
      position: relative;
      cs('color', 'base-font-color');
      cs('background', 'base-background-color');
      border-radius: 16px;
      ms('padding-top', 18px 22px 26px 28px 32px 32px);
      ms('padding-left', 18px 22px 26px 28px 32px 32px);
      ms('padding-right', 18px 22px 26px 28px 32px 32px);
      ms('padding-bottom', 16px 18px 20px 22px 24px 24px);
      vertical-align: middle;
      line-height: 1.5;
      font-size: 14px;
      font-weight: 600;

      .modal_title {
        width: 100%;
        position: relative;
        font-size: 20px;
        font-weight: bold;
        line-height: 1;
        margin-bottom: 24px;
      }

      .modal_con {
        width: 100%;
        position: relative;
      }
    }
  }
}

.global_components_common_modal {
  display: flex;
  align-items: center;
  justify-content: center;

  .common_modal_wrap {
    width: 100%;
    position: relative;
    color: #231C10;
  }
}