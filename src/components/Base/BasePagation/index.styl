.pagination {
  overflow: hidden;
  display: table;
  margin: 0 auto;
  ms('height', 30px 32px 34px 36px 38px 40px);
  ms('margin-top', 10px 14px 18px 22px 26px 30px);

  li {
    float: left;
    ms('margin-right', 4px 5px 6px 7px 8px 8px);
    border: none;
    color: rgba(0, 0, 0, 0.9);

    &:last-child {
      margin-right: 0;
    }

    &.first, &.last {
      a {
        ms('min-width', 30px 32px 34px 36px 38px 40px);
      }
    }

    &.active, &:active {
      a {
        background: #000;
        color: #fff;
      }
    }

    a {
      box-sizing: border-box;
      display: block;
      text-align: center;
      text-decoration: none;
      ms('font-size', 12px 14px 16px 18px 19px 19px);
      ms('height', 30px 32px 34px 36px 38px 40px);
      ms('min-width', 30px 32px 34px 36px 38px 40px);
      padding: 0;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #000;
      background: #fff;
      font-family: FZShuSong-Z01T;
      transition: all 0.3s ease;
      font-weight: 400;
      border-radius: 6px;

      &.btn {
        font-size: 15px;
        font-weight: 400;
        ms('min-width', 30px 32px 34px 36px 38px 40px);
        text-align: center;
        border-radius: 6px;
        background: transparent;
        border: 1px solid #000;
        color: #000;
        padding: 0 4px;
        position: relative;
      }

      &.prev {
        &:before {
          ms('width', 6px 6px 8px 8px 10px 10px);
          ms('height', 6px 6px 8px 8px 10px 10px);
          border-top-color: #000;
          border-left-color: #000;
          border-top-style: solid;
          border-left-style: solid;
          ms('border-top-width', 1px 1px 2px 2px 2px 2px);
          ms('border-left-width', 1px 1px 2px 2px 2px 2px);
          content: '';
          position: absolute;
          left: 50%;
          top: 50%;
          transform: translate3d(-25%, -50%, 0) rotate(-45deg);
        }
      }

      &.next {
        &:before {
          ms('width', 6px 6px 8px 8px 10px 10px);
          ms('height', 6px 6px 8px 8px 10px 10px);
          border-top-color: #000;
          border-left-color: #000;
          border-top-style: solid;
          border-left-style: solid;
          ms('border-top-width', 1px 1px 2px 2px 2px 2px);
          ms('border-left-width', 1px 1px 2px 2px 2px 2px);
          content: '';
          position: absolute;
          left: 50%;
          top: 50%;
          transform: translate3d(-75%, -50%, 0) rotate(135deg);
        }
      }
    }
  }
}