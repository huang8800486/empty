.base_components_bottom_layout {
  width: 100%;
  max-height: 70%;
  min-height: 50%;
  position: fixed;
  bottom: 0;
  left: 0;
  z-index: 1001;
  border-radius: 16px 16px 0 0;
  cs('background', 'base-background-color');
  cs('color', 'base-font-color');
  overflow: hidden;
  padding-bottom: constant(safe-area-inset-bottom); /* 兼容 IOS<11.2 */
  padding-bottom: env(safe-area-inset-bottom); /* 兼容 IOS>11.2 */

  .base_components_bottom_box {
    width: 100%;
    height: 100%;
    padding-top: 72px;
    overflow-y: auto;
    height: 70vh;

    .bottom_title {
      width: 100%;
      position: relative;
      padding: 24px 16px;
      font-size: 20px;
      font-weight: bold;
      display: flex;
      justify-content: space-between;
      position: absolute;
      left: 0;
      top: 0;
      cs('background', 'base-background-color');
      z-index: 1;

      a {
        width: 24px;
        height: 24px;
        display: block;
        cs('color', 'base-font-color');
      }
    }

    .bottom_content {
      width: 100%;
      position: relative;
      padding: 0px 16px 24px;
      height: 100%;
    }
  }
}

.base_components_bottom_mark {
  position: fixed;
  left: 0px;
  top: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(10, 22, 43, 0.5);
  z-index: 1000;
}