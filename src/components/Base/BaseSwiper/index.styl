  position: absolute;
  top: -48px;
  right: 52px;
  width: 70px;
  height: 27px;
  ms('display', none none block block block block);

  .swiper-button-prev, .swiper-button-next {
    width: 27px;
    height: 27px;

    &:after {
      content: '';
    }

    transition();

    &:hover {
      opacity: 0.7;
    }
  }

  .swiper-button-prev {
