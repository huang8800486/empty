.base_components_nodata_layout {
  width: 100%;
  height: 312px;
  display: flex;
  flex-direction: column;
  -webkit-box-pack: center;
  justify-content: center;
  -webkit-box-align: center;
  align-items: center;
  border-radius: 24px;
  margin-top: 24px;
  margin-bottom: 24px;

  img {
    display: block;
    height: auto;
    max-width: 100%;
    opacity: 0.7;
    width: 84px;
  }

  span {
    display: block;
    color: $base-active-color;
    vertical-align: middle;
    line-height: 1.5;
    margin-top: 15px;
    font-weight: 300;
    font-size: 16px;
  }
}