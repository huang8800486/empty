.base_components_input_layout {
  width: 100%;
  position: relative;

  &.disabled {
    input {
      color: #fff !important;

      &::-webkit-input-placeholder {
        color: #fff !important;
      }

      &::-moz-placeholder {
        color: #fff !important;
      }
    }
  }

  &.border {
    .input_wrap {
      border-color: #F5A603;
      border-radius: 8px;
    }
  }

  .input_wrap {
    height: 46px;
    width: 100%;
    position: relative;
    border-radius: 0;
    overflow: hidden;
    border: 1px solid #fff;
    border-radius: 6px;
    background: #fff;

    &.focus {
      border-color: #A5A5A5;
      border-radius: 6px;
    }

    input {
      background: none;
      border: none;
      outline: none;
      width: 100%;
      height: 100%;
      position: absolute;
      left: 0;
      top: 0;
      ms('font-size', 12px 12px 14px 16px 18px 18px);
      color: #1A1210;
      padding: 0 14px;

      &::-webkit-input-placeholder {
        color: #A5A5A5;
      }

      &::-moz-placeholder {
        color: #A5A5A5;
      }
    }
  }

  .max {
    position: absolute;
    right: 15px;
    top: 50%;
    transform: translate3d(0, -50%, 0);
    background: #FFFFFF;
    border-radius: 6px 6px 6px 6px;
    border: 1px solid #D8D8D8;
    display: block;
    ms('padding-top', 8px 9px 10px 11px 12px 12px);
    ms('padding-bottom', 8px 9px 10px 11px 12px 12px);
    ms('padding-left', 10px 11px 12px 13px 14px 15px);
    ms('padding-right', 10px 11px 12px 13px 14px 15px);
    transition();

    &:hover {
      background: #000000;
      color: #fff;
    }
  }
}